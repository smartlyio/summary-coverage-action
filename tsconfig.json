{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "module": "ESNext",
    "lib": ["es2023"],
    "target": "es2022",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": ["src/**/*", "jest.config.ts"]
}
